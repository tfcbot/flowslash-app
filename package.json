{
  "name": "flowslash-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "start": "next start",
    "dev:frontend": "next dev",
    "dev:backend": "CONVEX_AGENT_MODE=anonymous npx convex dev --once && CONVEX_AGENT_MODE=anonymous npx convex dev",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "predev": "CONVEX_AGENT_MODE=anonymous npx convex dev --until-success",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "convex": "^1.26.2",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "next": "^15.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.14.12",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
